$(NAME):	$(OBJ)
		make -C $(LIB)
		$(CC) -o $(NAME) $(OBJ) -L/usr/local/lib -ljpeg -L$(MLX) -lmlx_$(HOSTTYPE) -lXext -lX11 -L$(LIB) -lmy -lm $(CFLAGS)
clean:
		make clean -C $(LIB)
		$(RM) $(OBJ)

fclean:		clean
		make fclean -C $(LIB)
		$(RM) $(NAME)

re:		fclean all